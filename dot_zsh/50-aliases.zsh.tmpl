# 常用别名配置

# 系统别名
alias ll='ls -lh'
alias la='ls -lAh'
alias ..='cd ..'
alias ...='cd ../..'

# Git 别名(如果需要自定义,Oh My Zsh git 插件已提供很多)
# alias gs='git status'
# alias gc='git commit'

# Homebrew 别名
alias bi='brew install'
alias bu='brew uninstall'
alias bup='brew update && brew upgrade'
alias bls='brew list'
alias binfo='brew info'

# 快速编辑配置
alias zshconfig='$EDITOR ~/.zshrc'
alias zshreload='source ~/.zshrc'
